{
  "kind": "collectionType",
  "collectionName": "books",
  "info": {
    "singularName": "book",
    "pluralName": "books",
    "displayName": "Book"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name_book": {
      "type": "string",
      "default": "book1",
      "required": true
    },
    "book_pdf": {
      "allowedTypes": [
        "files"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    },
    "image_cover": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false,
      "required": true
    }
  }
}
